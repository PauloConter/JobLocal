@{
    ViewData["Title"] = "Como Funciona - JobLocal";
}

<div class="container">
    <h1>Como Funciona</h1>
    <p class="subtitle">Entenda como a JobLocal conecta trabalhadores e contratantes</p>

    <div class="steps">
        <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
                <h3>Cadastro</h3>
                <p>Crie seu perfil gratuitamente informando dados básicos</p>
            </div>
        </div>

        <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
                <h3>Busca e Publicação</h3>
                <p>Encontre serviços ou publique suas necessidades</p>
            </div>
        </div>

        <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
                <h3>Comunicação</h3>
                <p>Combine todos os detalhes do serviço</p>
            </div>
        </div>

        <div class="step">
            <div class="step-number">4</div>
            <div class="step-content">
                <h3>Execução</h3>
                <p>Profissional realiza o serviço conforme combinado</p>
            </div>
        </div>

        <div class="step">
            <div class="step-number">5</div>
            <div class="step-content">
                <h3>Avaliação</h3>
                <p>Avalie a experiência para ajudar outros usuários</p>
            </div>
        </div>
    </div>

    <div class="cta-section">
        <h2>Pronto para começar?</h2>
        <a href="@Url.Action("Register", "Account")" class="btn-primary">Quero me cadastrar</a>
    </div>
</div>